{
  "private": true,
  "devEngines": {
    "node": "8.x || 9.x || 10.x || 11.x",
    "npm": "6.x"
  },
  "devDependencies": {
    "@babel/core": "7.2.0",
    "@babel/plugin-proposal-class-properties": "7.2.0",
    "@babel/plugin-proposal-decorators": "7.2.0",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/preset-env": "7.2.0",
    "@babel/preset-flow": "7.0.0",
    "@babel/preset-react": "7.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "10.0.1",
    "babel-jest": "23.6.0",
    "babel-loader": "8.0.4",
    "babel-plugin-transform-jsx-stylesheet": "0.6.5",
    "chalk": "^2.4.1",
    "chokidar": "^2.0.4",
    "codecov": "^3.1.0",
    "conventional-commit-types": "^2.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^5.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-react": "~7.11.1",
    "findup": "^0.1.5",
    "ghooks": "^2.0.4",
    "glob": "^7.1.3",
    "istanbul-api": "^2.0.6",
    "istanbul-lib-coverage": "^2.0.1",
    "jest": "^23.6.0",
    "jest-localstorage-mock": "^2.3.0",
    "lerna": "2.0.0",
    "minimatch": "^3.0.4",
    "minimist": "^1.2.0",
    "rax-webpack-plugin": "^0.6.5",
    "rimraf": "^2.6.2",
    "semver-regex": "^2.0.0",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "uppercamelcase": "^3.0.0",
    "webpack": "^4.27.1",
    "stylesheet-loader": "^0.6.5",
    "image-source-loader": "^0.6.5"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "setup": "npm run build:compile && npm run bootstrap && npm run build:dist",
    "build:templates": "node ./scripts/build-templates.js",
    "build:compile": "npm run clean:compile && npm run build:compile:packages && npm run build:compile:universal && npm run build:compile:components",
    "build:compile:components": "node ./scripts/compile-components.js",
    "build:compile:packages": "node ./scripts/compile-packages.js",
    "build:compile:universal": "node ./scripts/compile-universal.js",
    "build:dist": "npm run clean:dist && node ./scripts/dist-universal.js && node ./scripts/dist-components.js && node ./scripts/dist-packages.js && node ./scripts/dist-builtins.js",
    "build:examples": "node ./scripts/build-examples.js",
    "build": "npm run build:compile && npm run build:dist && npm run build:examples && npm run build:templates",
    "watch:compile": "node ./scripts/compile-components.js --watch & node ./scripts/compile-packages.js --watch",
    "test": "jest",
    "start:examples": "cd examples/components && npm install && npm start",
    "start": "npm run start:examples",
    "lint": "npm run lint:nofix -- --fix",
    "lint:nofix": "eslint --ext .js --ext .jsx ./",
    "coverage": "npm run test -- --coverage",
    "coverage:upload": "npm run clean:coverage && npm run coverage && node ./scripts/mapCoverage.js && codecov",
    "publish": "node ./scripts/publish.js",
    "clean:dist": "rm -rf ./packages/*/dist && rm -rf ./components/*/dist && rm -rf ./universal/dist",
    "clean:compile": "rm -rf ./packages/*/lib && rm -rf ./components/*/lib && rm -rf ./universal/lib",
    "clean:coverage": "rm -rf ./coverage",
    "clean:modules": "rm -rf ./packages/*/node_modules && rm -rf ./components/*/node_modules && rm -rf ./universal/*/node_modules",
    "clean": "jest --clearCache && npm run clean:modules & npm run clean:compile & npm run clean:dist & npm run clean:coverage",
    "clear": "git clean -xfd"
  },
  "config": {
    "ghooks": {
      "commit-msg": "./scripts/validate-commit-msg.js"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
