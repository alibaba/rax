<!doctype html>
<html>

<head>
  <meta charset="utf-8">
  <meta id="viewport" name="viewport"  content="width=device-width" />
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="black">
  <meta name="format-detection" content="telephone=no">
  <title>MiniApp</title>
  <style>
    html {
      -ms-text-size-adjust: 100%;
      -webkit-text-size-adjust: 100%;
    }

    body {
      line-height: 1.6;
      font-size: 16px;
      font-family: -apple-system-font, "Helvetica Neue", sans-serif;
      margin: 0;
      position: absolute;
      top: 0;
      bottom: 0;
      left: 0;
      right: 0;
      margin: 0;
    }

    a img {
      border: 0;
    }

    a {
      text-decoration: none;
      -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
    }
  </style>
</head>

<body>
  <%- externalApi %>

  <% if (isDebug) { %>
  <script src="https://g.alicdn.com/code/npm/??atag/<%= atagVersion %>/dist/atag.js"></script>
  <script src="<%= debugFrameworkURL %>?random=<%= Math.random() %>"></script>
  <% } else { %>
    <% for (var i = 0; i < externalScripts.length; i++) {%>
      <script src="<%= externalScripts[i] %>"></script>
    <% } %>
  <% } %>

  <script>
    new MiniApp(<%- appConfig %>, document.body);
  </script>
</body>

</html>
